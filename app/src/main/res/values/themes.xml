<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GamesRadar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_1</item>
        <item name="colorPrimaryVariant">@color/black_2</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/poppins</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>
    <style name="CustomTextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="Widget.TopAppBar"
        parent="Widget.Material3.Toolbar">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">26sp</item>
    </style>
    <style name="Widget.TopAppBar2"
        parent="Widget.Material3.Toolbar">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">20sp</item>
    </style>



    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
<item name="fontFamily">@font/poppins_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="MyCustomFontTextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>

    </style>

    <style name="MyCustomFontTextAppearance2" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:fontFamily">@font/poppins_bold</item>

    </style>
    <style name="MyCustomFontTextAppearance3" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:fontFamily">@font/poppins_medium</item>

    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/mtrl_textinput_default_box_stroke_color</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:textAppearance">@style/MyCustomFontTextAppearance</item>
    </style>


</resources>